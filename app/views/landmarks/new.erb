<h2>Create New Landmark</h2>

<!-- add content here -->
<form action="/landmarks" method="post">
  <label>Name:</label>
  <input type="text" name="landmark[name]" id="landmark_name">

  <label>Year Completed:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed">

<br></br>
<label>Choose an existing figure:</label>
<br></br>

<% Figure.all.each do |figure| %>
<input type="checkbox" name="landmark[figure_id]" id="<%=figure.id%>" value="<%=figure.id%>"><%=figure.name%></input>
<% end %>
<br></br>

<label>and/or, create a new figure:</label>
<br></br>
<label>name:</label>
  <input type="text" name="figure[name]" id="figure_name"></input>
  <br></br>

  <input type="submit" id="Create New Landmark" value="Create New Landmark">
</form>


<a class="button" href="/figures">Landmarks</a>
